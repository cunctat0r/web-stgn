<h1>Установленные посты</h1>

<div>

<% @posts.each do |post| %>
  <div>
    <%= post.line_name %>
    №: <%= post.num_tower %>
    <%= post.net_region %>
    <%= link_to 'Показать', post_path(post) %>
    <%= link_to 'Редактировать', edit_post_path(post) %>
    <%= link_to 'Удалить', 
          post_path(post), 
          method: :delete,
          data: { confirm: 'Уверены?' }  %>
  </div>
<% end %>

</div>

<%= link_to 'Главная', welcome_index_path %> | <%= link_to 'Новый пост', new_post_path %>
