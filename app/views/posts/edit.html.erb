<h1>Редактрование поста</h1>

<%= form_with model: @post, local: true do |form| %>
  <p>
    <%= form.label :line_name %></br>
    <%= form.text_field :line_name %>
  </p>

  <p>
    <%= form.label :num_tower %></br>
    <%= form.text_field :num_tower %>
  </p>

  <p>
    <%= form.label :net_region %></br>
    <%= form.text_field :net_region %>
  </p>

  <p>
    <%= form.submit %>
  </p>

<% end %>

<%= link_to 'Все посты', posts_path %>
